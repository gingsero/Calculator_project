<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dhkim.mycalculator.MainActivity"
    android:background="@color/colorMainBackgroundDarkGray"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        >

        <TableRow
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="2.0"
            android:background="@drawable/border"
            >

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/calculatorSymbol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:layout_gravity="right"
                    android:textSize="30dp"
                    />
                <TextView
                    android:id="@+id/calculatorNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:gravity="right"
                    android:text="@string/app_name"
                    android:textSize="50dp"
                    />

            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1.6"
            >
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/button_ac"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="AC"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/button_pm"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="+/-"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/button_per"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="%"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/button_dev"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="รท"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            >
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                >
                <Button
                    android:id="@+id/button_7"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="7"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/button_8"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="8"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/button_9"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="9"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/button_mul"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="x"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            >
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                >
                <Button
                    android:id="@+id/button_4"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="4"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/button_5"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="5"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/button_6"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="6"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/button_min"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="-"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            >
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                >
                <Button
                    android:id="@+id/button_1"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="1"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/button_2"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="2"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/button_3"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="3"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/button_plu"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="+"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            >
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:weightSum="1">
                <Button
                    android:id="@+id/button_0"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/button_dot"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="."
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/button_equ"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="="
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </TableRow>


    </TableLayout>

</LinearLayout>
